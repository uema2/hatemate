<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_anime_path, method: :get, class: 'form-inline') do %>
      <div class="form-group">
        <%= text_field_tag :keyword, @keyword, class: 'form-control input lg', placeholder: "タイトルを入力", size: 40 %>
      </div>
      <%= submit_tag 'アニメを検索', class: 'btn btn-info btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'animes', animes: @animes %>