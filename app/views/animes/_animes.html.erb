<% if animes %>
  <div class="row">
    <% animes.each do |anime| %>
      <div class="anime">
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <% if anime.image_url.empty? %>
                <img class="img-responsive center-block" src="/images/no_image.png" alt="">
              <% else %>
                <img class="img-responsive center-block" src="<%= anime.image_url %>" alt="">
              <% end %>
            </div>
            <div class="panel-body">
              <% if anime.persisted? %>
                <p class="anime-title"><%= link_to anime.title, anime %></p>
              <% else %>
                <p class="anime-title"><%= anime.title %></p>
              <% end %>
              <div class="buttons text-center">
                <% if logged_in? %>
                  <%= render "ratings/rating_button", anime: anime %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>